<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
</head>
<body>

    <style>
        .custom_form{

         background-color: rgb(250, 250, 250);
         padding: 35px;
         margin: 15px;
            
        }

        h1{
            padding-bottom: 15px;
            padding-top: 15px;
        }

        .DroneLogo{

            padding-left: 10px;
        }
        

    </style>

   
  <div class="row justify-content-center">

 
<!-- Form for register -->

    <form method="POST" class= "custom_form col-md-4 order-2" id= "registerForm">

            <div>
                <h1>Registrate</h1>
            </div>

            <input type="hidden" asp-for="Cliente.Id" >

            <div class="mb-3">
                <label asp-for="Cliente.Nombre" class="forml-label">Nombre</label>
                <input asp-for="Cliente.Nombre" type="name" class="form-control" id="name" aria-describedby="emailHelp">
                <span class="text-danger" asp-validation-for="Cliente.Nombre"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Cliente.Apellido" class="forml-label">Apellido</label>
                <input asp-for="Cliente.Apellido" type="name" class="form-control" id="last_name" aria-describedby="emailHelp">
                <span class="text-danger" asp-validation-for="Cliente.Apellido"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Cliente.Cedula" class="forml-label">Cédula</label>
                <input asp-for="Cliente.Cedula" type="name" class="form-control" id="phone_number" aria-describedby="emailHelp">
                <span class="text-danger" asp-validation-for="Cliente.Cedula"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Cliente.Telefono" class="forml-label">Teléfono</label>
                <input asp-for="Cliente.Telefono" type="name" class="form-control" id="phone_number" aria-describedby="emailHelp">
                <span class="text-danger" asp-validation-for="Cliente.Telefono"></span>
            </div>

            <div class="mb-3">
            <label asp-for="Cliente.Correo" class="form-label">Correo</label>
            <input asp-for="Cliente.Correo" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
            <span class="text-danger" asp-validation-for="Cliente.Correo"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Cliente.Direccion" class="form-label">Dirección de entrega</label>
                <input asp-for="Cliente.Direccion" class="form-control" id="street_direction" aria-describedby="emailHelp">
                <span class="text-danger" asp-validation-for="Cliente.Direccion"></span>
            </div>
            
            
            
            <div class="mb-3">
                <label asp-for="Cliente.PasswordClie" class="form-label">Contraseña</label>
                <input asp-for="Cliente.PasswordClie" type="password" id="inputPassword5" class="form-control" aria-describedby="passwordHelpBlock">
                <span class="text-danger" asp-validation-for="Cliente.PasswordClie"></span>
                <div id="passwordHelpBlock" class="form-text">
                Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
            </div>

            <input type="submit" value="Registrar" asp-page-handler="Button1" class="btn btn-primary"></input>

    </form>

            
    </div>
          

          

<!-- Login  "-->

<form method="post" class= "custom_form col-md-4 order-1" id= "registerForm">

    <div>
        <h1>Login</h1>
    </div>

    <div class="mb-3">
        <label for="name" class="forml-label">Cedula</label>
        <input asp-for="Cliente.Cedula" type="name" class="form-control" id="name" aria-describedby="emailHelp">
    </div>

      <div class="mb-3">
        <label for="password" class="form-label">Contraseña</label>
        <input asp-for="Cliente.PasswordClie" type="password" id="inputPassword5" class="form-control" aria-describedby="passwordHelpBlock">
        <div id="passwordHelpBlock" class="form-text">
        Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
        </div>
      </div>
      
      <input type="submit" value="Login" asp-page-handler="Button2" class="btn btn-primary"></input>

  </form>

</div>
    
